<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="LocadoraPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.ricardocaldeira.cliente.Cliente</class>
    <class>com.ricardocaldeira.cliente.ClienteComum</class>
    <class>com.ricardocaldeira.cliente.ClienteMensalista</class>
    <class>com.ricardocaldeira.fatura.Fatura</class>
    <class>com.ricardocaldeira.genero.Genero</class>
    <class>com.ricardocaldeira.locacao.Locacao</class>
    <class>com.ricardocaldeira.mensalidade.Mensalidade</class>
    <class>com.ricardocaldeira.midia.Filme</class>
    <class>com.ricardocaldeira.midia.Jogo</class>
    <class>com.ricardocaldeira.midia.Midia</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/contact_db"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
